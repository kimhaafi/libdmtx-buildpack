#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2

echo "-----> Install libdmtx"

cd $BUILD_DIR
git clone https://github.com/dmtx/libdmtx.git
cd libdmtx

# Generate the configure script
./autogen.sh

# Configure the build to install to a directory within your app
./configure

# Build and install the library
make
make install
